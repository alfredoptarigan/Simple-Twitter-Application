<div class="main users-new">
    <div class="container">
        <div class="form-heading">Log in</div>
        <div class="form users-form">
            <div class="form-body">
                <% if @error_message %>
                <div class="form-error">
                    <%= @error_message %>
                </div>
                <% end %>
                <%= form_tag("/login") do %>
                <p>Email</p>
                <input name="email" id="" value="<%= @email %>">
                <p>Password</p>
                <input type="password" name="password" id="" value="<%= @password %>">
                <input type="submit" value="Log in">
                <!-- Add an end statement -->
                <% end %>
            </div>
        </div>
    </div>
</div>